# ============================================
# Telugu AI Tutor - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# Application Settings
DEBUG=true
APP_NAME=Telugu AI Tutor

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/telugu_tutor

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Vector Database (Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=telugu_content

# Security & Authentication
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# LLM Configuration
LLM_PROVIDER=gemini

# Google Gemini API Key (Get free key: https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=

# Ollama Configuration (Alternative to Gemini)
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI API Key (Optional, for embeddings)
OPENAI_API_KEY=

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# Logging
LOG_LEVEL=INFO
